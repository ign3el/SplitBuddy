# Server environment variables example for VPS deployment
# Copy to server/.env and fill in your values

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=splitbuddy
DB_PASSWORD=your_secure_password_here
DB_NAME=splitbuddy_db
DB_SSL_REQUIRED=false

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here_32_chars_minimum

# CORS - Frontend domain
CORS_ORIGIN=https://www.splitbuddy.ign3el.com

# Email Configuration
MOCK_EMAIL=true
# For production email, set MOCK_EMAIL=false and configure SMTP:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your@email.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_SECURE=false

# Public URLs
FRONTEND_URL=https://www.splitbuddy.ign3el.com
RESET_PUBLIC_URL=https://api.splitbuddy.ign3el.com
VERIFY_PUBLIC_URL=https://api.splitbuddy.ign3el.com

# Server port (PM2 will bind to this)
PORT=3003

# Cookie Domain (for subdomain sharing)
# Cookies will be accessible across *.splitbuddy.ign3el.com
COOKIE_DOMAIN=.splitbuddy.ign3el.com
