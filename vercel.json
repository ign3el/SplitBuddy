{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "functions": {
    "api/index.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/verify", "destination": "/api" },
    { "source": "/reset", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
