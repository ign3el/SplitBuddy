{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "functions": {
    "api/[...slug].js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/verify", "destination": "/api/verify" },
    { "source": "/reset", "destination": "/api/reset" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
