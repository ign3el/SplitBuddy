# Environment Configuration Template
# Copy to .env.development or .env.production and fill in your values

NODE_ENV=development

# Database Configuration
# For local: localhost, user, minimal/no password, SSL=false
# For production: strong password, SSL=true for secure connection
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=splitbuddy
DB_SSL=false

# JWT Secret - generate a random string
# Production: use a strong random secret (min 32 chars)
JWT_SECRET=your_jwt_secret_here

# CORS - allowed origin for frontend
CORS_ORIGIN=http://localhost:5173

# Server Port
PORT=3003

# Email Configuration
# Set MOCK_EMAIL=true to log emails instead of sending
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM="SplitBuddy <noreply@splitbuddy.app>"
MOCK_EMAIL=true

# Public URLs (for verification and password reset links)
RESET_PUBLIC_URL=http://localhost:3003/reset
VERIFY_PUBLIC_URL=http://localhost:3003/verify
FRONTEND_URL=http://localhost:5173
